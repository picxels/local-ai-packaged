# Database Configuration
QDRANT_URL=http://qdrant:6333
QDRANT_PORT=6333
QDRANT_API_KEY=your_qdrant_api_key
QDRANT_COLLECTION=training_documents
QDRANT_BATCH_SIZE=100
VECTOR_DIMENSION=768
SIMILARITY_THRESHOLD=0.75

# Redis Configuration
REDIS_URL=redis://redis:6379

# Supabase Configuration
SUPABASE_URL=http://supabase-kong:8000
SUPABASE_SERVICE_TOKEN=your_service_role_key
SUPABASE_ANON_TOKEN=your_anon_key

# Firecrawl Configuration
FIRECRAWL_URL=http://firecrawl-api:3003
FIRECRAWL_API_KEY=your_firecrawl_api_key

# LLM Configuration
OLLAMA_BASE_URL=http://ollama:11434
MODEL_NAME=gemma:27b-q4
MODEL_EMBEDDING_NAME=nomic-embed-text
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000

# Document Processing
MAX_DOCUMENT_SIZE=10000000  # 10MB
BATCH_SIZE=4
MAX_SEQUENCE_LENGTH=4096
MAX_WORKERS=2

# Course Generation
COURSE_TEMPLATE_PATH=/app/data/templates
COURSE_OUTPUT_PATH=/app/data/courses
MAX_COURSE_LENGTH=10000
MIN_SECTION_LENGTH=500
MIN_MODULES=3
MAX_MODULES=10
MIN_TOPICS_PER_MODULE=2
MAX_TOPICS_PER_MODULE=5

# Storage Configuration
TRAINING_SYSTEM_DATA_DIR=/app/data
TRAINING_SYSTEM_LOG_DIR=/app/logs
TRAINING_SYSTEM_CACHE_DIR=/app/cache
TRAINING_SYSTEM_MODEL_DIR=/app/models

# GPU Configuration
CUDA_VISIBLE_DEVICES=0
CUDA_LAUNCH_BLOCKING=1
PYTORCH_CUDA_ALLOC_CONF=max_split_size_mb:512
NVIDIA_VISIBLE_DEVICES=all
NVIDIA_DRIVER_CAPABILITIES=all

# API Configuration
API_HOST=0.0.0.0
API_PORT=9099
API_WORKERS=4
API_TIMEOUT=300

# Security
API_KEY=your_api_key
RATE_LIMIT=100
RATE_LIMIT_PERIOD=60

# Compliance Settings
COMPLIANCE_API_URL=http://compliance-processor:9100
COMPLIANCE_RULES=strict
INDUSTRY_TYPE=general
REGION=US

# WebUI Integration
WEBUI_URL=http://open-webui:8080
SYNC_INTERVAL=300

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
PROMETHEUS_METRICS=true
ENABLE_TELEMETRY=false
PROMETHEUS_MULTIPROC_DIR=/app/data/prometheus

# Logging
LOG_LEVEL=INFO
LOG_FILE=training_pipeline.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s